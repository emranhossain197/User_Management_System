<%- include('include/_header'); %>

    <div class="user_container">
        <div class="icon-user"><i class="fa fa-user-secret" aria-hidden="true"></i></div>
        <div class="login_container">
            <div class="user_login">
                <div class="user_method">
                    <p><a href="/user/login">Login</a></p>
                    <p class="active_btn"><a href="/user/register">Register</a></p>
                </div>
                <div class="register_from">
                    <form action="/user/api/user" method="POST" id="register">
                        <label class="label" for="name">Name</label>
                        <input type="text" name="name" id="name" value="" placeholder="Name">
                        <label for="email">E-mail</label>
                        <input class="label" type="text" name="email" id="email" value=""
                            placeholder="Example@gmail.com"> <br>
                        <div class="gender">
                            <span>Gender</span>
                            <select name="gender" id="gender" aria-placeholder="Gender">
                                <option value="gender" selected disabled> Gender</option>
                                <option value="male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>
                        <label for="Job">Job</label>
                        <input type="text" name="job" id="job" placeholder="MERN Stack developer">
                        <label for="address">Address</label>
                        <input type="text" name="address" id="address" placeholder="Address">
                        <label for="phone">Phone</label>
                        <input type="text" name="phone" id="phone" placeholder="+8801917000000">
                        <button type="submit">Login</button>
                    </form>
                </div>
            </div>

        </div>
    </div>


    <%- include('include/_footer'); %>